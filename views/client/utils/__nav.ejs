<nav>
    <div class="linksMoblie">
        <i class="fas fa-bars"></i>
    </div>
    <div class="logo">
        <a href="/">Capnin</a> 
    </div>
    <div class="links">
        <a href="/">Home</a>
        <a href="/shop">Shop All</a>
        <a href="/#contact">Contact</a>
    </div>

   
    <div class="search-bar">
        <div class="search-icon" id="toggler"><span class="fas fa-search"></span></div>
        <div class="cancel-icon" id="toggler"><span class="fas fa-times"></span></div>
        <form action="/shop" method="get" class="">
            <input type="search" name="search" id="search" placeholder="search" class="search-data">
            <button type="submit" class="fas fa-search"></button>
        </form>
    </div>
</nav>
<script>
    const searchIcon  = document.querySelector(".search-icon");
    const cancelIcon = document.querySelector(".cancel-icon");
    const toggler = document.querySelectorAll("#toggler");
    const bars = document.querySelector(".linksMoblie");
    
    bars.addEventListener("click",()=>{
        document.querySelector("nav").querySelector(".links").classList.toggle('active-links');
    })

    toggler.forEach(function(elem){
        elem.addEventListener("click",()=>{
            document.querySelector("nav").querySelector("form").classList.toggle('active');
            searchIcon.style.display = searchIcon.style.display === 'none' ? 'block' : 'none';
            cancelIcon.style.display = cancelIcon.style.display === 'block' ? 'none' : 'block';
        });
    });
</script>
<style>


    nav {
        height: 50px;
        display: flex;
        justify-content: flex-end;
        align-items: center;
        padding: 0 80px;
        color: #ffffff;
    }

    nav .logo a{
        font-size: 25px;
        color: #333333;
        text-decoration: none;
        margin: 0 auto;
    }
    nav .links {
        text-align: center;
        font-size: 14px;
        color: #333333;
    }
  
    nav .links a {
        text-decoration: none;
        color: #000000;
        padding: 0 15px;   
  font-family: "Roboto", serif;

    }
    nav .search-bar{
        flex-grow: 2;
    }
    nav form{
        width: 250px;
        display: flex;
        margin-left: auto;
        height: 40px;
        min-width: 18%!important;
    }
    nav form .search-data{
        height: 100%;
        width: 100%;
        padding:0 10px ;
        background: #ffffff;
        font-weight: 500;
        font-size: 17px;
        border: 1px solid #333333;
        border-radius: 2px 0 0 2px;
    }
    nav form button{
        padding: 0 15px;
        background: #333333;
        border: none;
        cursor: pointer;
        color: #ffffff;
        border-radius: 0 0 2px  2px;

    }
    nav .linksMoblie,
    nav .search-icon,
    nav .cancel-icon{
        width: 40px;
        color: #1e232d;
        text-align: center;
        font-size: 18px;
        cursor: pointer;
        display: none;
        margin-left:auto;
    }
    nav .linksMoblie{
        display: none;
    }
    nav .logo,
    nav .search-bar{
        z-index: 100;
    }
    @media (min-width: 980px) {
        nav .linksMoblie,
        nav .search-icon,
        nav .cancel-icon{
            display: none !important;
        }
    }

    @media (max-width: 980px) {
        nav form{
            display: none;
        }
        nav form.active{
            display: flex;
        }
        nav form .search-data{
            background: none;
            border: none;
            border: 1px solid rgba(155, 155, 155, 0.2);
            color: #f6f9fc;
        }
        nav form button{
            background: #ff3d00;
        }


        nav form{
            position: absolute;
            top: 55px;
            left: 0; 
            right: 0; 
            margin-left: auto; 
            margin-right: auto;
            background: #1e232b;
            padding: 12px; 
            height: 67px;
            width: 90%;
        }
        nav .search-icon{
            display: block;
        }
    }
    @media(max-width:760px) {
        nav {
            padding: 0 2px;
        }
        nav .logo{
            flex-grow: 2;
        }
        nav .links{
            position: absolute;
            top: -100%;
        }
        nav .links a{
            display: none;
        }

        nav .links.active-links {
            transition: all 0.5s ease;
            position: absolute;
            width: 100%;
            height: 175px;
            top: 50px;
            left: 0;
            background-color: #f6f9fc;
            display: flex;
            flex-direction: column;
        }
        nav .links.active-links a{
            margin-top: 25px;
            display: block;
        }

        nav .linksMoblie{
            display: block;
        }

    }
</style>